@model ExpenseTracker.Models.Expense

<h2>Add Expense</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning">@ViewBag.Message</div>
}

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" disabled="@(ViewBag.IsCategoryEmpty ? "disabled" : null)" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" disabled="@(ViewBag.IsCategoryEmpty ? "disabled" : null)" />
    </div>
    <div class="form-group">
        <label asp-for="Category.Id">Category</label>
        <select asp-for="Category.Id" class="form-control" asp-items="ViewBag.Categories" disabled="@(ViewBag.IsCategoryEmpty ? "disabled" : null)"></select>
    </div>
    <button type="submit" class="btn btn-primary" disabled="@(ViewBag.IsCategoryEmpty ? "disabled" : null)">Save</button>
</form>
